#version 330 core
layout (location = 0) in vec3 aPos;
layout (location = 2) in vec3 aOffset;
uniform mat4 MVP;

// in int gl_InstanceID;
out vec3 fColor;

void main()
{
	float scale = aOffset[0];
	fColor = vec3(1.0, 0.0,0.0);
	gl_Position = MVP * vec4(aPos * scale + aOffset, 1.0);
	// gl_Position = MVP * vec4(aPos, 1.0);
	
}